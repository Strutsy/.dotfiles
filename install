#!/bin/bash

dotfiles=(".vimrc" ".bashrc" ".xinitrc" ".Xresources" ".themes")
configs=("openbox" "tint2")

for i in "${dotfiles[@]}"; do
    echo "Symlinking $i..."
    ln -s $PWD/$i $HOME/
done

for i in "${configs[@]}"; do
    echo "Symlinking $i..."
    ln -s $PWD/$i $HOME/.config/
done

echo "Done!"
