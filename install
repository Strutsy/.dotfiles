#!/bin/bash

dotfiles=(".bashrc" ".xinitrc" ".Xresources" ".themes")
configs=("nvim" "openbox" "tint2")

for i in "${dotfiles[@]}"; do
    echo "Symlinking $i..."
    ln -s $PWD/$i $HOME/
done

for i in "${configs[@]}"; do
    echo "Symlinking $i..."
    ln -s $PWD/$i $HOME/.config/
done

echo "Symlinking .vimrc..."
ln -s $HOME/.config/nvim/init.vim $HOME/.vimrc

echo "Done!"
